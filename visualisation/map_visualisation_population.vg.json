{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "A map visualization of penalty amounts per capita per state.",
  "title": "Penalty Amount Per Capita in Australia",
  "width": 800,
  "height": 500,
  "autosize": {
    "type": "fit",
    "contains": "padding"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/BrianNge341/FIT3179/main/data/australia_map.topojson",
    "format": {
      "type": "topojson",
      "feature": "collection"
    }
  },
  "layer": [
    {
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "white"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/BrianNge341/FIT3179/main/datasource/OffencesMap.csv"
      },
      "transform": [
        {
          "calculate": "datum['Sum of Sum_Pen_Amt'] / datum['Population']",
          "as": "Penalty_Per_Capita"
        },
        {
          "lookup": "Rego_State",
          "from": {
            "data": {
              "url": "data\\australia_map.topojson",
              "format": {
                "type": "topojson",
                "feature": "collection"
              }
            },
            "key": "properties.State_Name",
            "fields": ["type", "geometry"]
          }
        }
      ],
      "mark": {
        "type": "geoshape",
        "stroke": "black",
        "strokeWidth": 0.5
      },
      "encoding": {
        "color": {
          "field": "Penalty_Per_Capita",
          "type": "quantitative",
          "scale": {
            "type": "log",
            "domain": [0.1, 20],
            "scheme": "blues"
          },
          "legend": {
            "title": "Penalty Amount Per Capita"
          }
        },
        "tooltip": [
          {"field": "State", "type": "nominal", "title": "State"},
          {"field": "Sum of Sum_Pen_Amt", "type": "quantitative", "title": "Penalty Amount", "format": ","},
          {"field": "Population", "type": "quantitative", "title": "Population", "format": ","},
          {"field": "Penalty_Per_Capita", "type": "quantitative", "title": "Penalty Amount Per Capita", "format": ",.4f"}
        ]
      }
    }
  ]
}