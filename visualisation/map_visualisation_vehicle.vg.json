{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "A map visualization of penalty amounts per vehicle per state from September 2017 to August 2024.",
  "title": "Penalty Amount Per Vehicle in Australia (September 2017 - August 2024)",
  "width": 800,
  "height": 500,
  "autosize": {
    "type": "fit",
    "contains": "padding"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/BrianNge341/FIT3179/main/data/australia_map.topojson",
    "format": {
      "type": "topojson",
      "feature": "collection"
    }
  },
  "layer": [
    {
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "white"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/BrianNge341/FIT3179/main/datasource/MotorRegistration.csv"
      },
      "transform": [
        {
          "calculate": "datum['Sum of Sum_Pen_Amt'] / datum['Vehicle registrations']",
          "as": "Penalty_Amount_Per_Vehicle"
        },
        {
          "lookup": "Rego_State",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/BrianNge341/FIT3179/main/data/australia_map.topojson",
              "format": {
                "type": "topojson",
                "feature": "collection"
              }
            },
            "key": "properties.State_Name",
            "fields": ["type", "geometry"]
          }
        }
      ],
      "mark": {
        "type": "geoshape",
        "stroke": "black",
        "strokeWidth": 0.5
      },
      "encoding": {
        "color": {
          "field": "Penalty_Amount_Per_Vehicle", 
          "type": "quantitative",
          "scale": {
            "domain": [0, 0.5, 1, 1.2, 1.5, 1.8, 2, 2.5, 3, 5, 10, 20], 
            "range": ["#f7fbff", "#e1f3ff", "#c6e9ff", "#a8ddff", "#8ad1ff", "#6bc5ff", "#4cb9ff", "#2dadff", "#0ea1ff", "#008cff", "#0077e6", "#0062cc", "#004db3", "#003899", "#002480", "#001066", "#00004d"]
          },
          "legend": {
            "title": "Penalty Amount Per Vehicle"
          }
        },
        "tooltip": [
          {"field": "State", "type": "nominal", "title": "State"},
          {"field": "Sum of Sum_Pen_Amt", "type": "quantitative", "title": "Penalty Amount (AUD)", "format": ","},
          {"field": "Vehicle registrations", "type": "quantitative", "title": "Vehicle Registrations", "format": ","},
          {"field": "Penalty_Amount_Per_Vehicle", "type": "quantitative", "title": "Penalty Amount Per Vehicle (AUD)", "format": ",.5f"}
        ]
      }
    }
  ]
}