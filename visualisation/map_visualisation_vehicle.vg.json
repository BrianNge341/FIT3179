{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "A map visualization of vehicle registrations per state.",
  "title": "Vehicle Registrations in Australia",
  "width": 800,
  "height": 500,
  "autosize": {
    "type": "fit",
    "contains": "padding"
  },
  "data": {
    "url": "https://raw.githubusercontent.com/BrianNge341/FIT3179/main/data/australia_map.topojson",
    "format": {
      "type": "topojson",
      "feature": "collection"
    }
  },
  "layer": [
    {
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "white"
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/BrianNge341/FIT3179/main/datasource/MotorRegistration.csv"
      },
      "transform": [
        {
          "calculate": "datum['Sum of Sum_Inf_Count'] / datum['Vehicle registrations']",
          "as": "Infraction_Count_Per_Capita"
        },
        {
          "calculate": "datum['Sum of Sum_Pen_Amt'] / datum['Vehicle registrations']",
          "as": "Penalty_Amount_Per_Capita"
        },
        {
          "lookup": "Rego_State",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/BrianNge341/FIT3179/main/data/australia_map.topojson",
              "format": {
                "type": "topojson",
                "feature": "collection"
              }
            },
            "key": "properties.State_Name",
            "fields": ["type", "geometry"]
          }
        }
      ],
      "mark": {
        "type": "geoshape",
        "stroke": "black",
        "strokeWidth": 0.5
      },
      "encoding": {
        "color": {
          "field": "Penalty_Amount_Per_Capita", 
          "type": "quantitative",
          "scale": {
            "type": "quantize",
            "domain": [0, 5], 
            "range": ["#f7fbff", "#deebf7", "#c6dbef", "#9ecae1", "#6baed6", "#4292c6", "#2171b5", "#084594"]
          },
          "legend": {
            "title": "Penalty Amount Per Vehicle"
          }
        },
        "tooltip": [
          {"field": "State", "type": "nominal", "title": "State"},
          {"field": "Sum of Sum_Inf_Count", "type": "quantitative", "title": "Infraction Count", "format": ","},
          {"field": "Sum of Sum_Pen_Amt", "type": "quantitative", "title": "Penalty Amount", "format": ","},
          {"field": "Vehicle registrations", "type": "quantitative", "title": "Vehicle Registrations", "format": ","},
          {"field": "Infraction_Count_Per_Capita", "type": "quantitative", "title": "Infraction Count Per Capita", "format": ",.2f"},
          {"field": "Penalty_Amount_Per_Capita", "type": "quantitative", "title": "Penalty Amount Per Capita", "format": ",.2f"}
        ]
      }
    }
  ]
}